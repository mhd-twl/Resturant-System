<style>
    .myWidget:hover {
        background-color: #ffe6b3;
        cursor: pointer;
    }

    .myWidget .ui-selected {
        background: #F39814;
        color: white;
    }

    .viewMealBody {
        position: relative;
        padding-bottom: 20%;
    }

    .listimg {
        -moz-user-select: none;
        -webkit-user-drag: none;
    }

    .imgga {
        height: 100px !important;
