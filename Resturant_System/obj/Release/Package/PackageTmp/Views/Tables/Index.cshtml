@model IEnumerable<Resturant_System.Models.Table>

@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table panel">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Unit_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number_of_Chairs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Extra)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Unit_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number_of_Chairs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Extra)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
