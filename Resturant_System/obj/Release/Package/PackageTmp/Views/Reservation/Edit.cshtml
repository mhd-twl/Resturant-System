                </div>
                <div class="editor-field">
                    <div class='col-sm-6'>
                        <input type='text' class="form-control" id='datetimepicker6' />
                    </div>
                    @Html.EditorFor(model => model.Start_Date)
                    @Html.ValidationMessageFor(model => model.Start_Date)*@
        </div>

        <div class="editor-label">
            <br />
            @Html.LabelFor(model => model.Extra)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Extra, new { @class = "form-control " })
            @Html.ValidationMessageFor(model => model.Extra)
        </div>

        <p>
            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
        </p>
    </fieldset>
}

