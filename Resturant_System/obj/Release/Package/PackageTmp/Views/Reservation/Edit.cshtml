@model Resturant_System.Models.Reserved_Table

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @*<legend>Reserved_Table</legend>*@

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @*@Html.LabelFor(model => model.Table_Id)*@
            
        </div>
        <div class="editor-field">
            <span>
                <select id="Table_Id" name="Table_Id" class="form-control">

                    @foreach (var item in ViewBag.Tables as List<Resturant_System.Models.Select_Item>)
                    {
                        if (@item.id == @Model.Table_Id)
                        {
                            <option value="@item.id" selected="selected">@item.value</option>
                        }
                        else
                        {
                            <option value="@item.id" disabled >@item.value</option>
                        }
                    }
                </select>
            </span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Table_Status)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Table_Status)
            @Html.ValidationMessageFor(model => model.Table_Status)
        </div>

        <div class="editor-label">
            <div class="editor-label">
                @Html.LabelFor(model => model.Start_Date)
            </div>
            <div class="editor-field">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="input-group date" id="datetimepicker11">
                            <input name="Start_Date" class="form-control" type="text">
                            <span class="input-group-addon">
                                <span class="fa-calendar fa alert-info"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker11').datetimepicker({
                            icons: {
                                time: "fa fa-clock-o",
                                date: "fa fa-calendar",
                                up: "fa fa-arrow-up",
                                down: "fa fa-arrow-down"
                            }
                        });
                    });
                </script>
                <script>
                    $(function () {
                        var $window = $(window), $body = $(document.body);
                        $body.scrollspy({
                            target: '.bs-sidebar'
                        });
                    });
