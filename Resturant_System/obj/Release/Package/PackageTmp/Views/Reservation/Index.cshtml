@model IEnumerable<Resturant_System.Models.Reserved_Table>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Table_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Table_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Extra)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div id="Table_Id">
                @foreach (var items in ViewBag.Tables as List<Resturant_System.Models.Select_Item>)
                {
                    if (items.id == item.Table_Id)
                    {
                        <div id="@items.id">@items.value</div>
                    }
                }
            </div>

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Table_Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Extra)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
