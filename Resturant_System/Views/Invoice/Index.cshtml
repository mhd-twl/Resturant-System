@model IEnumerable<Resturant_System.Models.Invoice>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class=" table panel" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Open_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Close_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Table_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Extra)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Open_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Close_Date)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Invoice_Status)*@
                <div id="Invoice_Status">
                    @foreach (var items in ViewBag.InvSts as List<Resturant_System.Models.Select_Item>)
                    {
                        if (items.id == item.Invoice_Status)
                        {
                            <div id="">@items.value</div>
                        }
                    }
                </div>
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Table_Id)*@
                <div id="Table_Id" >
                    @foreach (var items in ViewBag.Tables as List<Resturant_System.Models.Select_Item>)
                    {
                        if (items.id == item.Table_Id)
                        {
                            <div id="@items.id">@items.value</div>
                        }
                    }
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extra)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
