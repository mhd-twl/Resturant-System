@model Resturant_System.Models.Comp_Item

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Comp_Item</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CompId)
        </div>
        <div class="editor-field">
            @*@Html.EditorFor(model => model.CompId)
            @Html.ValidationMessageFor(model => model.CompId)*@
            <span>
                <select id="ComponentID" name="ComponentID" class="form-control">
                    <option value="0"> All Component</option>
                    @foreach (var item in ViewBag.ComponentID as List<Resturant_System.Models.Select_Item>)
                    {
                        <option value="@item.id" selected="@item.selected">@item.value</option>
                    }
                </select>
            </span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Extra)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Extra)
            @Html.ValidationMessageFor(model => model.Extra)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
