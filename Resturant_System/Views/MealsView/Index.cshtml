                                                <table>
                                                    <tr>
                                                        <td>
                                                            <div class="listimg listimg_2_of_1" style="width: auto !important;" draggable="false">
                                                                <a href="#"><img src="@meals.Image" class="imgMeal" alt=""><span class="prcMeal">$@meals.Price</span></a>
                                                            </div>
                                                        </td>
                                                        <td>&nbsp;</td>
                                                        <td>
