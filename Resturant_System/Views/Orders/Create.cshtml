 @model Resturant_System.Models.Order

@{
    ViewBag.Title = "Create New Order";
}



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend> New Order </legend>

        <div class="editor-field">
            @Html.HiddenFor(model => model.Active, new { Value = "true" })
            @Html.ValidationMessageFor(model => model.Active)
        </div>

        <div class="editor-label">
            <span>
                <select id="Invoice_Id" name="Invoice_Id" class="form-control">
                    <option value="0"> --- Select Table Invoice --- </option>
                    @foreach (var item in ViewBag.Invoice_Ids as List<Resturant_System.Models.Select_Item>)
                    {
                        <option value="@item.id" selected="@item.selected">@item.value </option>
                    }
                </select>
            </span>
        </div>
        <div class="editor-label">
            <span>
                <select id="Meal_Id" name="Meal_Id" class="form-control">
                    <option value="0"> --- Select Meal --- </option>
                    @foreach (var item in ViewBag.Meal_Ids as List<Resturant_System.Models.Select_Item>)
                    {
                        <option value="@item.id" selected="@item.selected">@item.value</option>
                    }
                </select>
            </span>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Extra)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Extra)
            @Html.ValidationMessageFor(model => model.Extra)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
