@model IEnumerable<Resturant_System.Models.Meal>

@{
    ViewBag.Title = "Menu";
}

<body class="menu_bkgdimg" >
    <p>
        <span class="panel panel-info h3 " style="position:relative;margin:5px;">
            @Html.ActionLink("Create New", "Create")
        </span>
    </p>
    <table class="table table-bordered">
        <tr class="row">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="row">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Available)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <div id="CategoryID" >
                        @foreach (var items in ViewBag.CategoryID as List<Resturant_System.Models.Select_Item>)
                        {
                            if (items.id == item.CategoryId)
                            {
                                <div id="">@items.value</div>    
                            }
                        }
                    </div>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>